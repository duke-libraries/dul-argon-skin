<%# Overrides TRLN Argon partial to help with semantic markup %>
<%# container for a single doc -%>
<section class="document <%= render_document_class document %> document-position-<%= document_counter%> " data-document-counter="<%= document_counter %>" itemscope itemtype="<%= document.itemtype %>" data-document-id="<%= document.id %>" aria-label="Item <%= document_counter + 1%>">
  <%= render_document_partials document, blacklight_config.view_config(document_index_view_type).partials, :document_counter => document_counter %>
</section>
